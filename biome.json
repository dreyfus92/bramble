{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"files": {
		"includes": ["**/*.ts", "**/*.json", "!node_modules/", "!dist/", "!drizzle/"]
	}
}
